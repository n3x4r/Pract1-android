<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_screen</item>
        <item name="android:background">@color/color_background_activity</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_title</item>
        <item name="android:layout_marginTop">@dimen/margen_up</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_button</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:layout_marginTop">@dimen/margen_up</item>




    </style>

    <style name="imagen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margen_up</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
